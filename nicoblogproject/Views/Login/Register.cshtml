
@model nicoblogproject.Models.ApplicationUser
@{
    ViewData["Title"] = "Register";
}

<div class="register-wrapper">
    <div class="registersystem">
        <h1 id="register-heading">Register</h1>
        <form asp-controller="Login" asp-action="GetUserData" method="post">
            <input type="text" id="register-username" name="registerUsername" placeholder="Username" /> <br />
            <input type="text" id="register-email" name="registerEmail" placeholder="Email" /> <br />
            <input type="password" id="register-password" name="registerPassword" placeholder="Password" /> <br />
            <input type="password" id="register-confirmpassword" name="confirmPassword" placeholder="Confirm Password"/> <br />
            <input type="submit" id="register-submit" value="Register" onclick="verifyRegistrationData()" />
        </form>
        
    </div>
</div>
<div class="registererror">
    <p id="register-error">@ViewData["ErrorMessage"]</p>
</div>


<div class="register-background">
    <p>
    </p>
</div>

