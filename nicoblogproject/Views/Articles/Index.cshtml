@model IEnumerable<nicoblogproject.Models.Article>
@{
    ViewBag.Title = "Index";
}

<div class="introduction-articles">
    <h1>Articles</h1>
    <p>Located on this page are articles that i have written 
    about topics which i find interesting or informative. 
    Furthermore you will find articles regarding my current
    and former projects.</p>
    <img src="https://cdn.dribbble.com/users/261302/screenshots/1361907/logoplaceholder.png" id="brand-logo"/>
</div>
<div class="section group">

    @foreach (var article in Model)
    {
        <div class="col article-item">
            <img src="http://www.saulsnewsstand.com/img/placeholder.jpg" id="article-image" />
            <p id="article-title">@article.ArticleTitle</p>
            <p id="article-creationtime">Created on: @article.ArticleCreationTime</p>
        </div>

    }

</div>
